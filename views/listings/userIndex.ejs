<% layout("/layouts/userBoilerplate") %>

    <style>
        .filter {
            margin-top: 1rem;
            text-align: center;
            margin-right: 2rem;
            opacity: 0.7;
        }

        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
        }

        .book-btn {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            cursor: pointer;
        }

        .book-btn:hover {
            background-color: #0056b3;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            width: 400px;
            margin: 10% auto;
            text-align: center;
            position: relative;
        }

        .close-btn {
            position: absolute;
            right: 15px;
            top: 10px;
            font-size: 20px;
            cursor: pointer;
        }
    </style>





    <div class="container mt-4">
        <div class="row g-4">
            <% allListings.forEach((listing, index)=> { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= listing.title %>
                            </h5>
                            <p class="card-text text-muted"><i class="fa fa-map-marker-alt"></i>
                                <%= listing.location %>
                            </p>
                            <p class="price">â‚¹<%= listing.price %>

                            </p>

                            <button class="book-btn"
                                onclick="openModal('<%= listing._id %>', '<%= listing.title %>', '<%= listing.price %>')">Book
                                Now</button>

                        </div>
                    </div>
                </div>
                <% }); %>

                    <div id="bookingModal" class="modal">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="bookingModalLabel">Book Your Stay</h5>
                                <span class="close-btn" onclick="closeModal()">&times;</span>
                            </div>

                            <div class="modal-body">
                                <form action="/bookings" method="POST">
                                    <div class="mb-3">
                                        <label for="checkIn" class="form-label">Check-in</label>
                                        <input type="date" class="form-control" name="checkIn" id="checkIn" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="checkOut" class="form-label">Check-out</label>
                                        <input type="date" class="form-control" name="checkOut" id="checkOut" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="people" class="form-label">No. of People</label>
                                        <input type="number" class="form-control" name="people" id="people" min="1"
                                            max="4" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="rooms" class="form-label">No. of Rooms</label>
                                        <input type="number" class="form-control" name="rooms" id="rooms" min="1" max="5"
                                            required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="roomType" class="form-label">Room Type</label>
                                        <select class="form-select" name="roomType" id="roomType">
                                            <option value="AC">AC</option>
                                            <option value="Non-AC">Non-AC</option>
                                        </select>
                                    </div>
                                    <input type="hidden" name="resortId" id="resortId">
                                    <input type="hidden" name="resortName" id="resortName">
                                    <input type="hidden" name="resortPrice" id="resortPrice">
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal" onclick="closeModal()">Close</button>
                                        <button type="submit" class="btn btn-primary">Book</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
        </div>


    </div>
<script>
    // Tax toggle
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    if (taxSwitch) {
        taxSwitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (let info of taxInfo) {
                info.style.display = (info.style.display !== "inline") ? "inline" : "none";
            }
        });
    }

    // Open booking modal
    function openModal(id, name, price) {
        document.getElementById('resortId').value = id;
        document.getElementById('resortName').value = name;
        document.getElementById('resortPrice').value = price;
        document.getElementById('bookingModal').style.display = 'block';

        // Set today's date as minimum for check-in
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('checkIn').setAttribute('min', today);
    }

    // Close booking modal
    function closeModal() {
        document.getElementById('bookingModal').style.display = 'none';
    }

    // Booking form validation
    document.addEventListener('DOMContentLoaded', function () {
        const bookingForm = document.querySelector('#bookingModal form');

        if (bookingForm) {
            bookingForm.addEventListener('submit', function (e) {
                const rooms = parseInt(document.getElementById('rooms').value, 10);
                const checkIn = new Date(document.getElementById('checkIn').value);
                const checkOut = new Date(document.getElementById('checkOut').value);

                // 1. Rooms validation
                if (rooms < 1 || rooms > 5) {
                    alert('You can book a minimum of 1 and a maximum of 5 rooms.');
                    e.preventDefault();
                    return;
                }

                // 2. Check-in date validation
                const todayDate = new Date();
                todayDate.setHours(0, 0, 0, 0);
                if (checkIn < todayDate) {
                    alert('Check-in date cannot be in the past.');
                    e.preventDefault();
                    return;
                }

                // 3. Check-out date validation
                const diffTime = checkOut - checkIn;
                const diffDays = diffTime / (1000 * 60 * 60 * 24);
                if (diffDays < 1) {
                    alert('Check-out date must be after check-in date.');
                    e.preventDefault();
                    return;
                }
                if (diffDays > 3) {
                    alert('You can book for a maximum of 3 days.');
                    e.preventDefault();
                    return;
                }
            });
        }
    });
</script>


